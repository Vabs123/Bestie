{
 "manifest_version": 2,
"name": "Bestie",
 "description": "Hey I am your Bestie, I will bring best out of you",
 "version": "1.0",
 "browser_action": {
        "default_icon": "img.jpg",
        "default_title": "Bestie",
        "default_popup": "popup.html"
    },
   "background": {
        "scripts": [
            "background.js"
        ]
    },
 

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'",

 "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "idle"
]
}