{
 "manifest_version": 2,
"name": "Bestie",
 "description": "Hey I am your Bestie, I will bring best out of you",
 "version": "1.0",
 "browser_action": {
        "default_icon": "img.jpg",
        "default_title": "Bestie",
        "default_popup": "popup.html"
    },
   "background": {
        "scripts": [
            "background.js"
        ]
    },

  "externally_connectable": {
    "matches":["http://localhost:8080/*", "http://localhost/*", "http://extensionslabs.com/socialMediaTracker/*"]
  },

  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content.js"]
    }
  ],
  
 "permissions": [
   "http://extensionslabs.com/socialMediaTracker/*",
   "http://localhost:8080/*",
   "http://localhost/*",
    "webNavigation",
    "tabs",
    "storage",
    "idle",
   "activeTab",
   "notifications"
 ]


}